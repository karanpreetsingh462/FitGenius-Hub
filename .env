# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (using local MongoDB)
MONGODB_URI=mongodb://localhost:27017/fitgenius_hub

# JWT Configuration
JWT_SECRET=fitgenius-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration (optional - set these if you want email functionality)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# OpenAI Configuration (optional - set this if you want AI chatbot functionality)
# OPENAI_API_KEY=your-openai-api-key

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads

# Cors
CORS_ORIGIN=http://localhost:3000
